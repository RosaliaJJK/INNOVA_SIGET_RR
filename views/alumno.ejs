<script src="/socket.io/socket.io.js"></script>
<script>
const socket = io();
const bitacora = document.getElementById("bitacora");

socket.on("clase_habilitada", () => {
  bitacora.classList.remove("disabled");
});

socket.on("clase_cerrada", () => {
  bitacora.classList.add("disabled");
});
</script>

</body>
</html>
